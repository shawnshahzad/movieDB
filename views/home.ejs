<div class="searchForm">
	<h2>Movie Search:</h2>
	<form action="http://localhost:3000/id" method="get" target="_blank">
		<table>
			<tr>
			
			<td>
				<label>By ID:</label>
				<input type="text" name="idSearch">
				<input class="test" type="submit" value="Search">
			</td>

			<td>
				<label>By Title:</label>
				<input type="text" name="titleSearch">
				<input class="test" type="submit" value="Search">
			</td>
			
			<td>
				<label>By Director:</label>
				<input type="text" name="directorSearch">
				<input class="test" type="submit" value="Search">
			</td>

    		</tr>
		</table>
	</form>
<div class="viewSearchTable">
<h2>Search Results:</h2>

<table class="outputTable">
	<thead>
	<tr>
		<th>Movie ID</th>
		<th>Title</th>
		<th>Franchise</th>
		<th>Genre</th>
		<th>Budget</th>
		<th>Revenue</th>
		<th>Director</th>
		<th>Studio</th>
	</tr>
	</thead>
